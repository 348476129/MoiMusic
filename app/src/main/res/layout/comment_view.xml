<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:fresco="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/userImage"
                fresco:placeholderImage="@mipmap/user_image"
                fresco:roundAsCircle="true"
                android:layout_width="42dp"
                android:layout_height="42dp" />
            <LinearLayout
                android:layout_marginLeft="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/name"
                        android:textColor="@color/titeleColor"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/time"
                        android:textColor="@color/grey"
                        android:textSize="12sp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:text="15年12月31日，15:21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <com.vanniktech.emoji.EmojiTextView
                    android:id="@+id/content"
                    android:textColor="@color/titeleColor"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:text="dididididdidididididididididididididididididididididididididididididididididiidididididididididid"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>